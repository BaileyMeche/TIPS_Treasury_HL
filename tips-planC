#!/usr/bin/env python3
"""Convenience wrapper for running the Plan C pipeline."""

import sys
from pathlib import Path

ROOT = Path(__file__).resolve().parent
SRC = ROOT / "src"
if str(SRC) not in sys.path:
    sys.path.insert(0, str(SRC))

from planC.pipeline import main  # noqa: E402  pylint: disable=wrong-import-position


if __name__ == "__main__":  # pragma: no cover - script entry point
    main()
